<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="FontColor">
        <item name="android:textColor">#00008B</item>
    </style>

    <style name="TextViewTop" parent="FontColor">
        <item name="android:padding">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/holo_red_light</item>

    </style>


    <style name="TextViewMiddle" parent="FontColor">
        <item name="android:padding">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/holo_green_light</item>

    </style>

    <style name="TextViewBottom" parent="FontColor">
        <item name="android:padding">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/holo_blue_light</item>

    </style>


    <style name="TextViewEnd" parent="TextViewMiddle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:gravity">center</item>

    </style>

</resources>
